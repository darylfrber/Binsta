{% extends "layouts/app.twig" %}


{% block title %}
	Post
{% endblock %}

{% block body %}
	{% if session.error is defined %}
		<div class="alert alert-danger alert-dismissible fade show col-12 col-lg-7 mx-auto mb-0 px-3 py-0" role="alert">
			<div class="d-flex gap-4 align-items-center mt-3">
				<i class="fa-solid fa-triangle-exclamation fs-1 mb-3"></i>
				<p><strong>Error!</strong><br>{{ session.error }}</p>
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		</div>
	{% endif %}
	<div class="card col-12 col-lg-7 mx-auto p-4 mt-4 shadow-sm border border-0">
		<form action="" method="post">
			<h1 class="text-center mb-4">New post</h1>
			<div class="input-group">
				<i id="input-icon" class="fa-solid fa-pen"></i>
				<input type="text" id="icon-input" name="post_description" class="form-control shadow-none rounded" placeholder="Description"/>
			</div>
			<div class="input-group mt-3">
				<i id="input-icon" class="fa-solid fa-code"></i>
				<textarea type="text" id="icon-input" name="post_code" rows="5" class="form-control shadow-none rounded" placeholder="Code"></textarea>
			</div>
			<div class="input-group mt-3">
				<i id="input-icon" class="fa-solid fa-language"></i>
				<input type="text" id="icon-input" name="post_language" class="form-control shadow-none rounded" placeholder="Code Language"/>
			</div>
			<button type="submit" name="post_submit" class="mt-3 btn btn-primary w-100">Create your account</button>
		</form>
	</div>
{% endblock %}