{% extends "layouts/app.twig" %}


{% block title %}
	Sign in
{% endblock %}

{% block body %}
	<div class="row d-flex justify-content-center">
		<div class="col-12 col-lg-7">
			<div class="card rounded mt-4 shadow-sm border border-0">
				<img class="rounded" alt="picture" src="https://www.freecodecamp.org/news/content/images/2022/12/main-image.png">
			</div>
		</div>
		<div class="col-12 col-lg-3">
			<div class="card rounded p-4 mt-4 shadow-sm border border-0">
				<form action="" method="post">
					<h1 class="text-center mb-4">Sign in to your account</h1>
					<div class="input-group">
						<i id="input-icon" class="fa-solid fa-user"></i>
						<input type="text" id="icon-input" name="user_username" class="form-control shadow-none rounded" placeholder="Username"/>
					</div>
					<div class="input-group mt-3">
						<i id="input-icon" class="fa-solid fa-lock"></i>
						<input type="password" id="icon-input" name="user_password" class="form-control shadow-none rounded" placeholder="Password"/>
					</div>
					<div class="form-check my-3">
						<input class="form-check-input" type="checkbox" value="" id="logindetails">
						<label class="form-check-label" for="logindetails">
							Save login details
						</label>
					</div>
					<button type="submit" name="user_login" class="btn btn-primary w-100">Sign in</button>
				</form>
				<hr>
				<p class="text-muted">Don't have an account?
					<a href="./register">Sign up</a>
				</p>
			</div>
		</div>
	</div>
{% endblock %}